<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Edit text para input do nome -->
    <EditText
        android:id="@+id/enterNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome"
        android:textSize="22sp"
        android:layout_margin="20sp"/>

    <!-- Edit text para input da idade -->
    <EditText
        android:id="@+id/enterIdade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:textSize="22sp"
        android:inputType="number"
        android:hint="Idade"/>

    <!-- Button para adicionar dados -->
    <Button
        android:id="@+id/addDados"
        android:layout_width="170sp"
        android:layout_gravity="center"
        android:text="Adicionar Dados"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"/>

    <!-- Button para mostrar dados -->
    <Button
        android:id="@+id/printDados"
        android:layout_width="150sp"
        android:layout_gravity="center"
        android:text="Mostrar Dados"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"/>

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Text view com todos os nomes -->
            <TextView
                android:id="@+id/Nome"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:text="Nome\n\n"
                android:textSize="22sp"
                android:padding="10sp"
                android:textColor="#000000"/>

            <!-- Text view com todas as idades -->
            <TextView
                android:layout_weight="1"
                android:id="@+id/Idade"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:text="Idade\n\n"
                android:textSize="22sp"
                android:padding="10sp"
                android:textColor="#000000"/>
        </LinearLayout>
    </ScrollView>



</LinearLayout>
